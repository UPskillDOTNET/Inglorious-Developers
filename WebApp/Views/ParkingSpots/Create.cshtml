@model WebApp.DTO.ParkingSpotDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ParkingSpotDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="parkingSpotID" class="control-label"></label>
                <input asp-for="parkingSpotID" class="form-control" />
                <span asp-validation-for="parkingSpotID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="priceHour" class="control-label"></label>
                <input asp-for="priceHour" class="form-control" />
                <span asp-validation-for="priceHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="floor" class="control-label"></label>
                <input asp-for="floor" class="form-control" />
                <span asp-validation-for="floor" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isPrivate" /> @Html.DisplayNameFor(model => model.isPrivate)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isCovered" /> @Html.DisplayNameFor(model => model.isCovered)
                </label>
            </div>
            <div class="form-group form-check">
                <label asp-for="parkingLotID" class="control-label"></label>
                    <input asp-for="parkingLotID" class="form-control" asp-items=@ViewBag.ParkingLotID>
                <span asp-validation-for="parkingLotID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

