@model WebApp.DTO.ParkingSpotDTO

@{
    ViewData["Title"] = "Edit";
}

<div>
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-6 col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div id="park-spot-edit">
                                    <h2 class="f-w-600 spot-edit">@ViewData["parkingSpotId"]</h2>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h4 class="m-b-20 p-b-5 b-b-default f-w-600">Parking Spot @ViewData["parkingSpotId"] Edit</h4>
                                    <div class="row">
                                        <form asp-action="Edit">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            <div class="form-group">
                                                <label>@Html.DisplayNameFor(model => model.parkingSpotID)</label>
                                                <p><strong><asp:TextBox ReadOnly="True">@ViewData["parkingSpotId"]</asp:TextBox></strong></p>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="priceHour" class="control-label"></label>
                                                <input asp-for="priceHour" class="form-control" type="text" />
                                                <span asp-validation-for="priceHour" class="text-danger"></span>
                                            </div>
                                            <div class="form-group">
                                                <label asp-for="floor" class="control-label"></label>
                                                <input asp-for="floor" class="form-control" />
                                                <span asp-validation-for="floor" class="text-danger"></span>
                                            </div>
                                            <div class="form-group form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" asp-for="isPrivate" /> @Html.DisplayNameFor(model => model.isPrivate)
                                                </label>
                                            </div>
                                            <div class="form-group form-check">
                                                <label class="form-check-label">
                                                    <input class="form-check-input" asp-for="isCovered" /> @Html.DisplayNameFor(model => model.isCovered)
                                                </label>
                                            </div>
                                            <div class="form-group">
                                                <p><strong>@ViewBag.parkLotName</strong></p>
                                                <p type="hidden" class="hidden readonly">@Html.DisplayFor(model => model.parkingLotID)</p>

                                                <p asp:HiddenField type="hidden" style="visibility: hidden;" class="hidden readonly">@Html.TextBox("ParkingLotID", ViewData["parkingLotId"], new { @readonly = "readonly" })</p>
                                            </div>
                                            <div class="form-group">
                                                <input id="save-btn" type="submit" value="Save" class="btn btn-primary" />
                                            </div>
                                            <div id="bk-ps" class="btn btn-secondary" style="width: 33%; margin-left:16.5em; margin-bottom:1em;">
                                                @Html.ActionLink("Back to List", "ManagerSpots", "ParkingSpots", new { id = ViewData["parkingLotId"] })
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




