        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.parkingSpotID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.userID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.userID)
        </dd>
    </dl>
</div>
