@model IEnumerable<WebApp.DTO.ReservationDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reservation List</h1>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ParkingSpot"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Parking Spot</a>
            </th>
            <th scope="col">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ParkingLot"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Parking Lot</a>
            </th>
            <th scope="col">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["StartingHour"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Starting Hour</a>
            </th>
            <th scope="col">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["EndingHour"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Ending Hour</a>
            </th>
        </tr>
    </thead>
    
    <tbody>
        @foreach (var item in Model)
        {
            <tr style='background-color: @(item.isCancelled == false ? "white": "#A4B3B6")' ;class="table-hover">
                <td id="pSpot_@(item.parkingLotID)_@(item.parkingSpotID)" ; onclick="location.href ='@Url.Action("Details", new {id = item.centralReservationID})'">
                    @Html.DisplayFor(modelItem => item.parkingSpotID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.parkingLotID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.startTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.endTime)
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="back-button">
    @Html.ActionLink("Back to Personal Details", "Index", "Users")
</div>

