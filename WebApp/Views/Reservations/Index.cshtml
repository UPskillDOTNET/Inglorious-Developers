@model IEnumerable<WebApp.DTO.ReservationDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ReservationID"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Reservation</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ParkingSpotID"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Parking Spot</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ParkingLotID"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Parking Lot</a>
            </th>
            <th style="text-align:right;">
                <a asp-action="Index" asp-route-sortOrder="@ViewData["EndTime"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">End Time</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-hover">
                <td onclick="location.href ='@Url.Action("Details", new {id = item.centralReservationID})'">
                    @Html.DisplayFor(modelItem => item.reservationID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.parkingSpotID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.parkingLotID)
                </td>
                <td style="text-align:right;">
                    @Html.DisplayFor(modelItem => item.endTime)
                </td>
            </tr>
        }
    </tbody>
</table>

<p style="text-align:left;">
    <a style="color:red; font-size:18px" asp-action="Create">New Reservation</a>
</p>


