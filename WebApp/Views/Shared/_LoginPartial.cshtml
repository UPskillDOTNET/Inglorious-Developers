@using Microsoft.AspNetCore.Authentication


<ul class="navbar-nav">
@if (@User.HasClaim(x => x.Type == "name"))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index" title="Index">Hello @User.FindFirst("name")?.Value</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="" asp-controller="Users" asp-action="Logout" >
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity"  asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Login</a>
    </li>
}
</ul>
