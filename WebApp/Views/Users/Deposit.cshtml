@model WebApp.DTO.UserDTO
@{
    ViewData["Title"] = "Create";
    Layout = null;
}

        <form asp-action="Deposit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4>Wallet</h4>
        <dt class="col-sm-2">
           @User.FindFirst("name")?.Value
        </dt>
        <dd class="col-sm-10">
            @Html.HiddenFor(model => model.userID)
        </dd>
          <div class="form-group">
                <label asp-for="walletDTO.totalAmount" class="control-label"></label>
                <input asp-for="walletDTO.totalAmount" class="form-control" />
                <span asp-validation-for="walletDTO.totalAmount" class="text-danger"></span>
          </div>
            <div class="form-group">
                <input type="submit" value="Deposit" class="btn btn-primary" />
            </div>
        </form>
  

