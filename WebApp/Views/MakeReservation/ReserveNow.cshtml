@model WebApp.DTO.ReservationDTO

@{
    ViewData["Title"] = "ReserveNow";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<body>
    <div class="page-content page-container" id="page-content">
        <div class="padding">
            <div class="row container d-flex justify-content-center">
                <div class="col-xl-6 col-md-12">
                    <div class="card user-card-full">
                        <div class="row m-l-0 m-r-0">
                            <div class="col-sm-4 bg-c-lite-green user-profile">
                                <div class="card-block text-center text-white">
                                    <div class="m-b-25"> <img src="https://img.freepik.com/free-vector/car-parking-illustration_7095-314.jpg?size=338&ext=jpg" class="img-radius" alt="User-Profile-Image"> </div>
                                    <br>
                                    <h6 class="f-w-600">@Html.DisplayFor(model => model.User.name)</h6>
                                    <h6 class="f-w-600">@Html.DisplayFor(model => model.User.UserName)</h6>
                                </div>
                            </div>
                            <div class="col-sm-8">
                                <div class="card-block">
                                    <h4 class="m-b-20 p-b-5 b-b-default f-w-600">Your New Reservation</h4>
                                    <div class="row">
                                        <form asp-action="Confirm">
                                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                            @Html.HiddenFor(model => model.parkingLotID)
                                            @Html.HiddenFor(model => model.parkingSpotID)
                                            @Html.HiddenFor(model => model.startTime)
                                            <div class="form-group">
                                                <label asp-for="endTime" class="control-label"></label>
                                                <input asp-for="endTime" class="form-control" />
                                                <span asp-validation-for="endTime" class="text-danger"></span>
                                            </div>
                                            @Html.HiddenFor(model => model.userID)
                                            <div class="form-group">
                                                <input type="submit" value="Confirm" class="btn btn-primary" />
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="card-body-buttons">

                                    <div class="user-dashboard-buttons"><a class="myReservations-button-user-dashboard" asp-area="" asp-controller="Reservations" asp-action="Index" asp-route-id="">Booking Management</a></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>