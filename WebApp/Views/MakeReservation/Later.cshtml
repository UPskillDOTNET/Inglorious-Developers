@model WebApp.DTO.ReservationDTO

@{
    ViewData["Title"] = "PickDatesLater";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Reserve Later</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ReserveLater">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.parkingLotID)
            <div class="form-group">
                <label asp-for="startTime" class="control-label">When do you want to reserve?</label>
                <input asp-for="startTime" class="form-control" />
                <span asp-validation-for="startTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="endTime" class="control-label">Up until when?</label>
                <input asp-for="endTime" class="form-control" />
                <span asp-validation-for="endTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ReserveLater" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Parking Lot", "Index", "MakeReservation")
</div>

