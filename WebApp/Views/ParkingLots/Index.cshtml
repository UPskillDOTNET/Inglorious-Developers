@model IEnumerable<WebApp.DTO.ParkingLotDTO>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">ParkingLot Name</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr class="table-hover">
            <td onclick="location.href ='@Url.Action("Details", new {id = item.parkingLotID})'">
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td style="text-align:right;">
                @Html.DisplayFor(modelItem => item.location)
            </td>
        </tr>
        }
    </tbody>
</table>
